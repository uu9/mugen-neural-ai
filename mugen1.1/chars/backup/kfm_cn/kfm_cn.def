; 功夫人的中文化def文档。
; 由MKII翻译。
; 包括人物所需要的文件名。

; 人物信息
[Info]
name = "Kung Fu Man CN"        ;人物名
displayname = "Kung Fu Man CN" ;显示名
versiondate = 09,01,2012    ;人物版本号 (月-日-年 或者 X.XX)
mugenversion = 1.0          ;人物对应的MUGEN版本 (X.XX)
author = "MKII"         ;作者名
pal.defaults = 1,2,3,4      ;默认色表顺序 (最多4个)
                            ;序号从1开始
localcoord = 320,240        ;分辨率宽度和高度

; 人物文件
[Files]
cmd     = kfm.cmd           ;操作输入
cns     = kfm.cns           ;常量定义
st      = kfm.cns           ;State定义
stcommon = common1.cns      ;公用state (人物文件夹或者common文件夹中)
sprite  = kfm.sff           ;图像文件
anim    = kfm.air           ;动作文件
sound   = kfm.snd           ;声效文件
;ai      = kfm.ai            ;系统AI用文件 (未实装，可以无视)

; 将选人时的按键对应到色表上
[Palette Keymap]
x = 1 ;按X按键选色表1，以此类推
y = 2
z = 3
a = 4
b = 5
c = 6
;x2 = 7 ;按start和X按键选色表7，以此类推
;y2 = 8
;z2 = 9
;a2 = 10
;b2 = 11
;c2 = 12

; arcade模式的开头结局动画
[Arcade]
;intro.storyboard = intro.def
;ending.storyboard = ending.def
