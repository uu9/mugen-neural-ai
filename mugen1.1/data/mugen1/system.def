yes.offset = -80, 60		;偏移量
yes.active.text = "YES"		;光标移到确定续关上的文字
yes.active.font = 1,3,0		;光标移到确定续关上的文字字体
yes.active.offset = -80, 60	;光标移到确定续关上的偏移量
no.text = "NO"			;不续关文字，以下参数同上
